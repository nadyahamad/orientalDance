<%- include('../partials/head.ejs') %>
</head>
<body>
	<%- include('../partials/header.ejs') %>
	<main class="content">
		<h1 class="yellow-bg text-center pt-1"><%= title %></h1>
		<!-- book class -->
		<section class="container mt-2 mb-1">
			<div class="form-card col-6 col-s-11">
				<h2><%= p.title %></h2>
				<% if (products.length > 0) { %>
					<ul>
						<% products.forEach(p => { %>
							<li class="cart__item">
								<h1><%= p.title %></h1>
								<h2>Quantity: <%= p.quantity %></h2>
								<form action="/cart-delete-item" method="POST">
									<input type="hidden" name="_csrf" value="<%= csrfToken %>">
									<input type="hidden" value="<%= p._id %>" name="productId">
									<button class="btn" type="submit">Delete</button>
								</form>
							</li>
						<% }) %>
					</ul>
				<% } else { %>
					<h1>No Products in Cart!</h1>
				<% } %>
				<!-- submit btn -->
				<div class="padding-1">
					<input type="submit" value="Delete" class="deletebtn">
				</div>
			</div>
		</section>
		<!-- book class -->
		<section class="container">
			<div class="col-6 col-s-11 flex-container">
				<div class="col-5">
					<button id=" " class="headbutton col-11" type="button" onclick =" "> 
						Add new booking
					</button>
				</div>
				<form action="/admin/delete-class" method="POST" class="col-5">
					<input type="hidden" name="_csrf" value="<%= csrfToken %>">
					<input type="hidden" value="" name="class_id">
					<button class="deletebtn col-11" type="submit"> 
						Delete booking
					</button>
				</form>
			</div>
		</section>
		<section class="container">
			<div class="col-8">
				<input type="hidden" name="_csrf" value="<%= csrfToken %>">
				<button id="" class="large-btn" type="button" onclick =""> 
					Confirm Booking
				</button>
			</div>
		</section>
	</main>
	<%- include('../partials/footer.ejs') %>
	<%- include('../partials/end.ejs') %>
</body>
</html>