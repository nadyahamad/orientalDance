<%- include('../partials/head.ejs') %>
    <body>
        <%- include('../partials/header.ejs') %>
        <!-- main content -->
        <main class="content">
            <!-- tabs -->
            <section class="container mt-2 mb-1">
                    <!-- form card-->
                    <div class="col-7 col-s-10 signin-form" >
                        <h1 class="tex-center"> Login </h1>
                        <p class="text-center ml-2"> Please enter your details </p>
                        <!-- form Login -->
                        <% if (errorMessage) { %>
                            <div><%= errorMessage %></div>
                        <% } %>
                        <form method="POST" action='/login'>
                            <div class="padding-1">
                                <label for="email">Email</label>
                                <input type="email" name="email"  id="email" placeholder="email" class="form-inputs" />
                            </div>
                            <div class="padding-1">
                                <label for="password">Password</label>
                                <input type="password" name="password"  id="password" placeholder="Password" class="form-inputs" />
                            </div>
                            <div class="padding-1 container">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="large-btn" type="submit">Login</button>
                            </div>
                        </form>
                        <!-- form Login -->
                        <p class="text-center bottom-dotted" >Don't have an account?  
                            <a href="/signup" class="login"> Register here</a>
                        </p> 
                    </div>
                    <!-- form card -->
                </div>
            </section>
            <!-- tabs -->
        </main>
        <!-- main content -->
        <%- include('../partials/footer.ejs') %>
        <%- include('../partials/end.ejs') %>
    </body>
</html>