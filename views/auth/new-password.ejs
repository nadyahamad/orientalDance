<%- include('../partials/head.ejs') %>
    <body>
        <%- include('../partials/header.ejs') %>
        <!-- main content -->
        <main class="content">
            <!-- tabs -->
            <section class="container mt-2 mb-1">
                    <!-- form card-->
                    <div class="col-7 col-s-10 signin-form" >
                        <h1 class="tex-center"> <%= title %> </h1>
                        <p class="text-center ml-2"> Please enter your details </p>
                        <!-- form Login -->
                        <% if (errorMessage) { %>
                            <div class="user-message user-message--error" ><%= errorMessage %></div>
                        <% } %>
                        <form method="POST" action='/new-password'>
                            <div class="padding-1">
                                <label for="password">Password</label>
                                <input type="password" name="password"  id="password" placeholder="Password" class="form-inputs" />
                            </div>
                            <div class="padding-1 container">
                                <input type="hidden" name="userId" value="<%= userId %>">
                                <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="large-btn" type="submit">Update Password</button>
                            </div>
                        </form>
                    </div>
                    <!-- form card -->
                </div>
            </section>
            <!-- tabs -->
        </main>
        <!-- main content -->
        <%- include('../partials/footer.ejs') %>
        <%- include('../partials/end.ejs') %>
    </body>
</html>